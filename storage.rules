rules_version = '2';

// Firebase Storage 安全規則
service firebase.storage {
  match /b/{bucket}/o {

    // 大頭貼上傳規則
    match /avatars/{userId} {
      // 允許任何人讀取大頭貼
      allow read: if true;

      // Production mode: Proper validation for avatar uploads
      // Since the game doesn't use Firebase Auth, we allow uploads with size/type restrictions
      // In a production app with auth, you'd check: request.auth != null && request.auth.uid == userId
      allow write: if request.resource.size <= 2 * 1024 * 1024  // Limit to 2MB
                   && request.resource.contentType.matches('image/.*')  // Only allow images
                   && (request.resource.contentType == 'image/jpeg' ||
                       request.resource.contentType == 'image/png' ||
                       request.resource.contentType == 'image/gif' ||
                       request.resource.contentType == 'image/webp');  // Specific image types only
    }

    // 拒絕其他所有存取
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
