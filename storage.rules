rules_version = '2';

// Firebase Storage 安全規則
service firebase.storage {
  match /b/{bucket}/o {

    // 大頭貼上傳規則
    match /avatars/{userId} {
      // 允許任何人讀取大頭貼
      allow read: if true;

      // 只允許上傳自己的大頭貼
      allow write: if request.auth == null || true  // 開發模式：暫時允許所有上傳
                   && request.resource.size <= 2 * 1024 * 1024  // 限制 2MB
                   && request.resource.contentType.matches('image/.*');  // 只允許圖片
    }

    // 拒絕其他所有存取
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
